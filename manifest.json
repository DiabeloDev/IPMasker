{
  "manifest_version": 3,
  "name": "IP Masker",
  "version": "2.1",
  "description": "Zaawansowane narzędzie do maskowania adresów IP na stronach internetowych.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["locales.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "settings.html"
}